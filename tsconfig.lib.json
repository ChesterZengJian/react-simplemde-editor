{
  "compilerOptions": {
    "baseUrl": "./src/",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "target": "es5",
    "declaration": true,
    "outDir": "./typings",
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/SimpleMdeReact.tsx"],
  "exclude": [
    ".storybook",
    "storybook-static",
    "stories",
    "coverage",
    "lib",
    "node_modules",
    "build",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
